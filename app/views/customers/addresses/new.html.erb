
    <h3>配送先登録/一覧</h3>
    
    <%= form_with model: @address, local: true do |f| %>
    <div class="row">
        <div class="col-2">
          <div class="form-group">     
    
            <div class="field">
              <%= f.label :郵便番号（ハイフンなし） %><br />
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
            </div>
            
            <div class="field">
              <%= f.label :住所 %><br />
              <%= f.text_field :address, autocomplete: "email" %>
            </div>
            
            <div class="field">
              <%= f.label :宛名%><br />
              <%= f.text_field :name, autocomplete: "email" %>
            </div>
          </div>
        </div>
    </div>
        
    <% end %>
    
    <%= link_to "新規登録", new_address_path, class: "btn btn-primary" %>
    
    <div class="row">
        <table class="table table-bordere">
            <thead>
                <tr>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @addresses.each do |address| %>
                <tr>
                    <th><%= address.postal_code %></th>
                    <th><%= address.address %></th>
                    <th><%= address.name %></th>
                    <th><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-primary" %></th>
                    <th><%= link_to "削除する", new_address_path(address.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %></th>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
        
        
