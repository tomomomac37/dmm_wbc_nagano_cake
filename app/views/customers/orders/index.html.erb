<div class="row login-row">
      <h2>注文履歴一覧</h2>
      <div class="col-xs-10 col-xs-offset-1"style="margin-top: 50px;">
        <table class="table table-bordered">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">注文日</th>
              <th scope="col">配送先</th>
              <th scope="col">注文商品</th>
              <th scope="col">支払金額</th>
              <th scope="col">ステータス</th>
              <th scope="col">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
                <tr>
                  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <p><%= order.postal_code %>&emsp;<%= order.address %></p>
                    <p><%= order.name %></p>
                  </td>
                  <td>
                  <% order.order_items.each do |order_item| %>
                    <p><%= order_item.item.name %></p>
                  <% end %>
                  </td>
                  <td><%= order.billing_amount %>円</td>
                  <td><%= order.sales_order_status %></td>
                  <td>
                  <%= link_to "表示する", order, class: 'btn btn-primary' %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
      </div>
</div>
