<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="">
        <div class="container">
          <%= link_to "LOGO", root_path %>
          <ul class="navbar-nav nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to, "マイページ", customer_path %></li>
              <li><%= link_to, "商品一覧", items_index_path %></li>
              <li><%= link_to, "カート", %></li>
              <li><%= link_to, "ログアウト", destroy_customer_session%></li>
            <% else %>
              <li><%= link_to, "About", homes_about_path %></li>
              <li><%= link_to, "商品一覧", items_index_path %></li>
              <li><%= link_to, "新規登録", new_customer_registration_path %></li>
              <li><%= link_to, "ログイン", new_customer_session_path %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
