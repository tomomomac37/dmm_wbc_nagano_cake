<div class="row-10">
    <h3>注文履歴一覧</h3>
    <table class="table">
        <thead>
            <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
            <tr>
                <th><%= link_to order.created_at, admins_order_path(order) %></th>
                <td><%= order.name %></td>
                <% @total = 0 %>
                <td>
                    <% order.order_items.each do |item| %>
                    <% @total += item.amount %>
                    <% end %>
                    <%= @total %>
                </td>
                <td><%= order.sales_order_status %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>