<h2>商品一覧</h2>
<%= link_to "商品新規登録", new_admins_item_path, class: "btn btn-default" %>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
			<tr>
				<th><%= item.id %></th>
				<th><%= link_to item.name, admins_item_path(item) %></th>
				<th><%= item.price %></th>
				<th><%= item.genre.name %></th>
				<th><% if item.is_active == true %>
					販売中
					<% else %>
					販売停止中
					<% end %>
				</th>
			</tr>
		<% end %>
	</tbody>
</table>