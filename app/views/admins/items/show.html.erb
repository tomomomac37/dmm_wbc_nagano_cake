<div class="row">
	<h2>商品詳細</h2>

	<div class="col-xs-5">
		<%= attachment_image_tag(@item, :image,size: "300x217", fallback: "no_image.jpg") %>
	</div>
	<div class="col-xs-7">
		<table class="table">
			<tr>
				<th>商品名</th>
				<th><%= @item.name %></th>
			</tr>
			<tr>
				<th>商品説明</th>
				<th><%= @item.introduction %></th>
			</tr>
			<tr>
				<th>ジャンル</th>
				<th><%= @item.genre.name %></th>
			</tr>
			<tr>
				<th>税込価格（税抜価格）</th>
				<th><%= (@item.price * 1.1).to_i %>(<%= @item.price %>)円</th>
			</tr>
			<tr>
				<th>販売ステータス</th>
				<th>
				<% if @item.is_active == true %>
				販売中
				<% else %>
	            売切れ
				<% end %>
	            </th>
			</tr>
		</table>
		<div>
		<%= link_to '編集する', edit_admins_item_path(@item), class: "btn btn-success glyphicon glyphicon-wrench pull-right" %>
	    </div>
	</div>
</div>